[Unit]
Description=Quant Dashboard Backend API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/quant-finance-dashboard/backend
Environment="PATH=/home/ubuntu/quant-finance-dashboard/backend/venv/bin"
EnvironmentFile=/home/ubuntu/quant-finance-dashboard/backend/.env
ExecStart=/home/ubuntu/quant-finance-dashboard/backend/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=10

StandardOutput=append:/home/ubuntu/quant-finance-dashboard/backend/logs/service.log
StandardError=append:/home/ubuntu/quant-finance-dashboard/backend/logs/service-error.log

[Install]
WantedBy=multi-user.target
